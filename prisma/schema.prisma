// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String?   @unique
  sessions Session[]
}

model Session {
  id        Int       @id @default(autoincrement())
  startTime DateTime?
  endTime   DateTime?
  projects  Project[]
  createdAt DateTime  @default(now())
  User      User?     @relation(fields: [userId], references: [id])
  userId    Int?
  status    Status
}

enum Status {
  inProgress
  complete
}

model Project {
  id        Int      @id @default(autoincrement())
  grade     Grade
  attempts  Int      @default(1)
  createdAt DateTime @default(now())
  Session   Session? @relation(fields: [sessionId], references: [id])
  sessionId Int?
}

enum Grade {
  vb_v0
  v1_v2
  v3_v4
  v5_v6
  v7_v8
  v9_v10
  v11_
}
