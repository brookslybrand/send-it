{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "db:init": "prisma db push && prisma db seed",
    "styles:build": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/index.css",
    "styles:watch": "npm run styles:build -- --watch",
    "prebuild": "npm run styles:build && prisma generate",
    "build": "remix build",
    "remix:dev": "remix dev",
    "predev": "prisma generate",
    "dev": "npm-run-all --parallel styles:watch remix:dev",
    "postinstall": "remix setup node",
    "deploy": "flyctl deploy --build-arg REMIX_TOKEN=${REMIX_TOKEN}",
    "start": "remix-serve build",
    "prepare": "husky install",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx ./app",
    "pretty-quick": "pretty-quick --staged"
  },
  "prisma": {
    "seed": "ts-node ./prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^3.4.2",
    "@reach/visually-hidden": "^0.16.0",
    "@remix-run/react": "^1.0.5",
    "@remix-run/serve": "^1.0.5",
    "clsx": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^v6.0.0",
    "remix": "^1.0.5",
    "tailwindcss": "^2.2.19",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.5",
    "@types/node": "^16.11.9",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "prisma": "^3.4.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
